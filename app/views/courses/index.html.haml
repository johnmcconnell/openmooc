.row
  .col-xs-12
    .page-header
      %h1 #{t('app_name')} Courses
.row
  .col-xs-12
    - @courses.each do |course|
      .row
        = render partial: 'list_summary', locals: { course: course }
.row
  = link_to new_course_path do
    %button{type: 'button', class: 'btn btn-default btn-lg'}
      Add course
      %span{class: 'glyphicon glyphicon-plus'}

