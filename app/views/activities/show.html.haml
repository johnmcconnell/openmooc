.col-xs-8
  .page-header
    %h1
      = link_to "#{@activity.section.course.title}:", @activity.section.course
    %br
    .dropdown
      %button.btn.btn-lg.btn-default#lesson-dropdown{ type: 'button', 'data-toggle' => 'dropdown', 'aria-haspopup' => true, 'aria-expanded' => false }
        = @activity.section.name
        %span.caret
      %ul.dropdown-menu{ role: 'menu', 'aria-labeledby' => 'lesson-dropdown' }
        - @activity.course.sections.each do |section|
          %li{ role: 'presentation' }
            = link_to section.name, section, role: 'menuitem', tabindex: -1
.col-xs-4
  = render partial: 'menu'
.col-xs-8
  = render @activity.page
