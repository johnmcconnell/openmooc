.col-xs-12.col-sm-8
  .page-header
    %h1
      = link_to "#{@activity.section.course.title}", @activity.section.course
    %br
    .dropdown
      %button.btn.btn-lg.btn-default#lesson-dropdown{ type: 'button', 'data-toggle' => 'dropdown', 'aria-haspopup' => true, 'aria-expanded' => false }
        = @activity.section.name
        %span.caret
      %ul.dropdown-menu{ role: 'menu', 'aria-labeledby' => 'lesson-dropdown' }
        - @activity.course.sections.each do |section|
          %li{ role: 'presentation' }
            = link_to section.name, section, role: 'menuitem', tabindex: -1
  %nav
    %ul.pagination
      - @activity.section.activities.each do |activity|
        - if @activity == activity
          %li.active
            = link_to activity.page_number, page_path(activity)
        - else
          %li
            = link_to activity.page_number, page_path(activity)
.col-xs-8.col-sm-4
  = render partial: 'menu'
.col-xs-12.col-sm-8
  = render @activity.page
.col-xs-12.col-sm-8
  .pull-right
    - if @activity.lower_item.nil?
      = link_to 'Finish lesson!', @activity.course, class: 'btn btn-primary'
    - else
      = link_to @activity.page.next_page_text, page_path(@activity.lower_item), class: 'btn btn-primary'
